{
  "name": "@valist/cli",
  "version": "2.7.2",
  "description": "Valist CLI",
  "author": "Valist, Inc.",
  "bin": {
    "valist": "./bin/run"
  },
  "homepage": "https://github.com/valist-io/valist-js",
  "license": "MPL-2.0",
  "main": "dist/index.js",
  "repository": "valist-io/valist-js",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1.8.0",
    "@oclif/plugin-help": "^5",
    "@valist/sdk": "*",
    "ethers": "^5.5.4",
    "inquirer": "^8.2.4",
    "ipfs-http-client": "^56.0.3",
    "ipfs-utils": "^9.0.7",
    "keytar": "^7.9.0",
    "yaml": "^2.1.0"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/inquirer": "^8.2.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chai": "^4",
    "eslint": "^8.15.0",
    "eslint-plugin-mocha": "^10.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "ganache": "^7.1.0",
    "globby": "^11",
    "mocha": "^9",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.4"
  },
  "oclif": {
    "bin": "valist",
    "dirname": "valist",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b && oclif manifest && oclif readme",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "test": "mocha -r ts-node/register 'test/**/*.ts' --timeout 120000",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/valist-io/valist-js/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
